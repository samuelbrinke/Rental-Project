<UserControl
    x:Class="MovieRental.MovieInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MovieRental"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Name="Movie_Info" Orientation="Horizontal">
            <StackPanel>
                <Image Name="MovieImage_Img" />
            </StackPanel>
            <StackPanel>
                <Label Name="MovieTitle_Lbl" FontSize="30" />
                <Label Name="MovieGenre_Lbl" FontSize="30" />
                <Label Name="MovieRating_Lbl" FontSize="30" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
