<Window x:Class="MovieRental.MovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MovieWindow" Height="450" Width="800">
    <Grid>
            
            <!-- 
            Grid är användbart när man vill få lite struktur i sin UI.
            Alla celler måste inte vara lika stora dock som i detta exemplet
        -->
        <ScrollViewer>
            <StackPanel>
                <Grid Name ="Menu" Background="#E6EFF4">
                    <Grid.RowDefinitions>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Label Content="Blockbuster" FontSize="24"></Label>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Menu Background="#E6EFF4">
                            <ComboBox
                                materialDesign:HintAssist.Hint="Genre">
                                <ComboBoxItem Content="Action">
                                </ComboBoxItem>
                                <ComboBoxItem Content="Comedy">
                                </ComboBoxItem>
                                <ComboBoxItem Content="Family">
                                </ComboBoxItem>
                                <ComboBoxItem Content="Horror">
                                </ComboBoxItem>
                            </ComboBox>
                        </Menu>
                        <Button Content="Home" Background="#E6EFF4" Foreground="Black" BorderThickness="0"></Button>
                    </StackPanel>
                    <StackPanel Background="#E6EFF4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Content="Profile" HorizontalAlignment="Right"></Button>
                    </StackPanel>
                </Grid>
                <Grid Name="MovieGrid" ShowGridLines="True">

                    <!-- Här har jag manuellt bestämt antalet kolumner jag vill ha -->
                    <Grid.RowDefinitions>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- Antalet rader fyller jag på inne i 'MainWindow.xaml.cs' -->
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
