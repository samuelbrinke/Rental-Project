<Window x:Class="MovieRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#fafafa">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Blockbuster Movie Rental" Margin="0, 0, 0, 30" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"></Label>
            <Border Width="200" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                <StackPanel>
                    <Label Content="Login" HorizontalAlignment="Center"></Label>
                    <Label Content="Username"></Label>
                    <TextBox></TextBox>
                    <Button Content="Login"></Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
